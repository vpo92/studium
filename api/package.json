{
  "name": "studium-api",
  "version": "0.3.0",
  "description": "API for Studium Prosopography",
  "main": "server.js",
  "scripts": {
    "test": "jest --config=jest.config.json",
    "start": "NODE_ENV=dev babel-watch ./src/server.js -w .",
    "startwin": "$NODE_ENV=dev babel-watch ./src/server.js -w .",
    "build": "webpack -p && mkdir -p docker/build/docs && cp docs/index.html docker/build/docs/ && cp -r resources docker/build/",
    "postbuild": "cp ./package.json ./package-lock.json docker/build",
    "predocker:build": "npm -q run build",
    "docker:build": "rm -rf build && npm -q run build && docker build -t studium/api docker -f docker/Dockerfile.api",
    "docker:run": "docker-compose -f ./docker/docker-compose.yml up",
    "docker:push": "./docker/tag_push.sh",
    "release": "yarn build && yarn docker:build && yarn docker:push"
  },
  "author": "vpo92",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.16.0",
    "babel-runtime": "^6.11.6",
    "babel-watch": "^2.0.7",
    "eslint": "^3.7.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.3.0",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.61.0",
    "jest": "^23.6.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.11.0",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.5.2",
    "composable-middleware": "^0.3.0",
    "cors": "~2.7.1",
    "errorhandler": "^1.1.1",
    "expect": "^21.2.1",
    "express": "^4.16.2",
    "json2csv": "^5.0.6",
    "jsonwebtoken": "^8.4.0",
    "method-override": "^2.1.2",
    "mongodb": "^2.2.36",
    "mongoose": "^5.3.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "uuid": "^3.2.1",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  }
}
